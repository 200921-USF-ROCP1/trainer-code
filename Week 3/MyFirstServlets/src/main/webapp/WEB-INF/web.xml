<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <display-name>MyFirstServlets</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  
  <!-- The servlet tag describes a servlet by identifying a class and pairing it with a name -->
  <servlet>
  	<!-- The name is arbitrary, but the class must exist -->
  	<servlet-name>ServletOne</servlet-name>
  	<servlet-class>com.revature.servlets.MyFirstServlet</servlet-class>
  </servlet>
  
  <!-- The servlet-mapping tag associates a servlet name with a pattern to be matched against -->
  <servlet-mapping>
  	<servlet-name>ServletOne</servlet-name>
  	<!-- In this case, it means match anything after localhost:8080/MyFirstServlets/ -->
  	<url-pattern>/*</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>ServletTwo</servlet-name>
  	<servlet-class>com.revature.servlets.MySecondServlet</servlet-class>
  </servlet>
  
  <!-- Exact matches are preferred over wildcard matches -->
  <servlet-mapping>
  	<servlet-name>ServletTwo</servlet-name>
  	<url-pattern>/two</url-pattern>
  </servlet-mapping>
</web-app>